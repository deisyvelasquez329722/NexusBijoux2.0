namespace NexusBijoux.web.Views.product
{
    public class editprodu
    {
        {
    Layout = "_MyLayout";  
}

<h2>Editar Producto</h2>

<form asp-action="Edit" method="post">
    <div class="form-group">
        <label>Nombre del Producto</label>
        <input asp-for="Product_Name" class="form-control" />
        <span asp-validation-for="Product_Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Descripción</label>
        <textarea asp-for="Product_Description" class="form-control"></textarea>
        <span asp-validation-for="Product_Description" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Precio</label>
        <input asp-for="Price" class="form-control" />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Categoría</label>
        <input asp-for="Category" class="form-control" />
        <span asp-validation-for="Category" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Guardar Cambios</button>
</form>
    }
}
